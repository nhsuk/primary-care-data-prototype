<!-- Start of radio buttons -->
<form class="form" id="pageform" method="get">

    <div class="form-group">
        <fieldset>
            <legend class="strong">

            </legend>

            <div class="multiple-choice__container">
                <label for="radio-1" class="multiple-choice multiple-choice--radio">
                    <input id="radio-1" class="multiple-choice__input" type="radio" name="{{ radio-name }}" value={{ radio-1-value }} >
                    {{ radio-1 }}
                </label>
                <label for="radio-2" class="multiple-choice multiple-choice--radio">
                    <input id="radio-2" class="multiple-choice__input" type="radio" name="{{ radio-name }}" value={{ radio-2-value }} >
                    {{ radio-2 }}
                </label>
                <label for="radio-3" class="multiple-choice multiple-choice--radio">
                    <input id="radio-3" class="multiple-choice__input" type="radio" name="{{ radio-name }}" value={{ radio-3-value }} >
                    {{ radio-3 }}
                </label>
            </div>
        </fieldset>

    </div>

    <input type="submit" class="button" value="Continue">

</form>
<!-- End of radio buttons -->